<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TCC.Views.ChoosePagePassenger"
             Title="Menu do Passageiro"
             BackgroundColor="#e86464">

    <Grid>
        <!-- Ondas decorativas no fundo -->
        <Path Fill="#e04141"
              Opacity="1"
              Data="M0,40 
                    C200,0 600,100 1000,40 
                    L1000,0 L0,0 Z"
              HorizontalOptions="FillAndExpand"
              VerticalOptions="Start"
              Aspect="Fill" />

        <Path Fill="#5c0e0e"
              Opacity="0.25"
              Data="M0,800 L1000,800 
                    L1000,760 
                    Q700,720 500,740 
                    Q300,760 0,730 
                    Z"
              HorizontalOptions="FillAndExpand"
              VerticalOptions="End"
              Aspect="Fill" />

        <!-- ConteÃºdo principal -->
        <VerticalStackLayout Spacing="40"
                             Padding="0"
                             VerticalOptions="Center"
                             HorizontalOptions="Center">

            <!-- Texto de Boas-vindas -->
            <Label Text="Menu do Passageiro"
                   FontSize="36"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   VerticalOptions="Center">
                <Label.Shadow>
                    <Shadow Brush="Black" 
                            Offset="2,2" 
                            Radius="5" 
                            Opacity="0.3"/>
                </Label.Shadow>
            </Label>

            <!-- BotÃµes -->
            <VerticalStackLayout Spacing="20" 
