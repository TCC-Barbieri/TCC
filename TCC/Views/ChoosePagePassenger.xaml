                        HeightRequest="55"
                        SemanticProperties.Hint="Confirmar presenÃ§a hoje"
                        Clicked="EVH_Clicked">
                    <Button.Shadow>
                        <Shadow Brush="Black" 
                                Offset="0,4" 
                                Radius="8" 
                                Opacity="0.2"/>
                    </Button.Shadow>
                    <Button.GestureRecognizers>
                        <PointerGestureRecognizer PointerEntered="OnPointerEntered" 
                                                  PointerExited="OnPointerExited"/>
                    </Button.GestureRecognizers>
                </Button>

                <!-- BotÃ£o Perfil -->
                <Button x:Name="perfilButton"
