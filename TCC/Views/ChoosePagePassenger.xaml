                        BorderWidth="2"
                        CornerRadius="25"
                        HeightRequest="55"
                        SemanticProperties.Hint="Sair da conta"
                        Clicked="DesconectarButton_Clicked">
                    <Button.Shadow>
                        <Shadow Brush="Black" 
                                Offset="0,4" 
                                Radius="8" 
                                Opacity="0.2"/>
                    </Button.Shadow>
                    <Button.GestureRecognizers>
                        <PointerGestureRecognizer PointerEntered="OnPointer2Entered" 
