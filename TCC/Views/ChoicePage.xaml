<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TCC.Views.ChoicePage"
             Title="ChoicePage">


    <Grid>
    <!-- Imagem de fundo -->
    <Image Source="fundo_tcc.jpg"
               Aspect="AspectFill"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand" />

    <!-- Overlay semi-transparente (opcional para melhorar legibilidade) -->
    <BoxView Color="Black" 
                 Opacity="0.3"
                 HorizontalOptions="FillAndExpand"
                 VerticalOptions="FillAndExpand" />



    <!-- Conteúdo principal -->
        <VerticalStackLayout Spacing="40"
                             Padding="0"
                             VerticalOptions="Center"
                             HorizontalOptions="Center">

            <!-- Texto de Boas-vindas -->
            <Label Text="Escolha seu perfil"
                   FontSize="36"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   VerticalOptions="Center">
                <Label.Shadow>
                    <Shadow Brush="Black" 
                            Offset="2,2" 
                            Radius="5" 
                            Opacity="0.3"/>
                </Label.Shadow>
            </Label>

            <!-- Botões -->
            <VerticalStackLayout Spacing="20" 
                                 WidthRequest="250">

                <Button x:Name="driverButton"
                        Text="Sou motorista"
                        TextColor="#2C3E50"
                        FontAttributes="Bold"
                        BackgroundColor="White"
                        CornerRadius="25"
                        HeightRequest="55"
                        SemanticProperties.Hint="Entrar como motorista"
                        Clicked="driverButton_Clicked">
                    <Button.Shadow>
                        <Shadow Brush="Black" 
                                Offset="0,4" 
                                Radius="8" 
                                Opacity="0.2"/>
                    </Button.Shadow>
                    <Button.GestureRecognizers>
                        <PointerGestureRecognizer PointerEntered="OnPointerEntered" 
                                                  PointerExited="OnPointerExited"/>
                    </Button.GestureRecognizers>
                </Button>

                <Button x:Name="passengerButton"
                        Text="Sou passageiro"
                        TextColor="#2C3E50"
                        FontAttributes="Bold"
                        BackgroundColor="White"
                        CornerRadius="25"
                        HeightRequest="55"
                        SemanticProperties.Hint="Entrar como passageiro"
                        Clicked="passengerButton_Clicked">
                    <Button.Shadow>
                        <Shadow Brush="Black" 
                                Offset="0,4" 
                                Radius="8" 
                                Opacity="0.2"/>
                    </Button.Shadow>
                    <Button.GestureRecognizers>
                        <PointerGestureRecognizer PointerEntered="OnPointerEntered" 
                                                  PointerExited="OnPointerExited"/>
                    </Button.GestureRecognizers>
                </Button>

            </VerticalStackLayout>

        </VerticalStackLayout>

    </Grid>
</ContentPage>