<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TCC.Views.LoginPage"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout>

            <Grid HeightRequest="300">
                <Image InputTransparent="True" Source="fundovermelho.jpg" Aspect="AspectFill" />
                <BoxView BackgroundColor="#80000000" InputTransparent="True" />
                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="8">
                    <Label Text="Seja Bem-Vindo!" FontSize="26" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center"/>
                    <Image Source="logo_sem_fundo.png" HeightRequest="150" WidthRequest="150"/>
                </VerticalStackLayout>
            </Grid>

            <VerticalStackLayout Padding="20" Spacing="15">
                <Label Text="Login" FontSize="32" HorizontalOptions="Center" />
                <Entry x:Name="EmailEntry" Placeholder="E-mail" Keyboard="Email" />
                <Entry x:Name="PasswordEntry" Placeholder="Senha" IsPassword="True" />
                <Picker x:Name="UserTypePicker" Title="Tipo de usuÃ¡rio">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Passageiro</x:String>
                            <x:String>Motorista</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
                <Button Text="Entrar" BackgroundColor="Red" TextColor="White" Clicked="OnLoginClicked" IsEnabled="True"/>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
