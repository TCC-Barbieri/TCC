<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TCC.Views.Home"
             Title="Home"
             BackgroundColor="#FF0000">

    <VerticalStackLayout Spacing="40"
                         Padding="30"
                         VerticalOptions="Center"
                         HorizontalOptions="Center">

        <!-- Texto de Boas-vindas -->
        <Label Text="Bem-vindo!"
               FontSize="32"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center" />

        <!-- Botões -->
        <VerticalStackLayout Spacing="20" WidthRequest="250">

            <Button Text="Sou Motorista"
                    TextColor="Black"
                    FontAttributes="Bold"
                    BackgroundColor="White"
                    CornerRadius="30"
                    HeightRequest="55"
                    SemanticProperties.Hint="Entrar como motorista">
                <Button.ImageSource>
                    <FontImageSource Glyph="➔"
                                     Size="20"
                                     Color="Red"
                                     FontFamily="Arial" />
                </Button.ImageSource>
            </Button>

            <Button Text="Sou Passageiro"
                    TextColor="Black"
                    FontAttributes="Bold"
                    BackgroundColor="White"
                    CornerRadius="30"
                    HeightRequest="55"
                    SemanticProperties.Hint="Entrar como passageiro">
                <Button.ImageSource>
                    <FontImageSource Glyph="➔"
                                     Size="20"
                                     Color="Red"
                                     FontFamily="Arial" />
                </Button.ImageSource>
            </Button>

        </VerticalStackLayout>

    </VerticalStackLayout>
</ContentPage>
