<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TCC.Views.DriverRegisterPage"
             Title="Criar Conta"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Cabeçalho -->
            <Border BackgroundColor="#FF0000" 
                    Padding="20,30" 
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle,8">
                <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                    <Label Text="Criar Conta" 
                           FontSize="24" 
                           HorizontalOptions="Center" 
                           FontAttributes="Bold"
                           TextColor="White" />
                    <Label Text="Passageiro" 
                           FontSize="16" 
                           HorizontalOptions="Center" 
                           TextColor="White" />
                    <Label Text="Cadastre-se para utilizar o transporte Barbieri!" 
                           FontSize="12" 
                           HorizontalOptions="Center" 
                           TextColor="White" />
                </VerticalStackLayout>
            </Border>

            <!-- Nome -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Nome Completo" FontSize="14" TextColor="#333" />
                <Entry Placeholder="Digite seu nome completo" 
                       FontSize="16" 
                       BackgroundColor="White" 
                       TextColor="#333" 
                       HeightRequest="45" />
            </VerticalStackLayout>

            <!-- RG -->
            <VerticalStackLayout Spacing="5">
                <Label Text="RG" FontSize="14" TextColor="#333" />
                <Entry Placeholder="00.000.000-0" 
                       FontSize="16" 
                       BackgroundColor="White" 
                       TextColor="#333" 
                       Keyboard="Numeric"
                       HeightRequest="45" />
            </VerticalStackLayout>

            <!-- CPF -->
            <VerticalStackLayout Spacing="5">
                <Label Text="CPF" FontSize="14" TextColor="#333" />
                <Entry Placeholder="000.000.000-00" 
                       FontSize="16" 
                       BackgroundColor="White" 
                       TextColor="#333" 
                       Keyboard="Numeric"
                       HeightRequest="45" />
            </VerticalStackLayout>

            <!-- Email -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Email" FontSize="14" TextColor="#333" />
                <Entry Placeholder="seu@email.com" 
                       FontSize="16" 
                       BackgroundColor="White" 
                       TextColor="#333" 
                       Keyboard="Email"
                       HeightRequest="45" />
            </VerticalStackLayout>

            <!-- Data de Nascimento -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Data de Nascimento" FontSize="14" TextColor="#333" />
                <DatePicker BackgroundColor="White" 
                            TextColor="#333" 
                            FontSize="16"
                            HeightRequest="45" />
            </VerticalStackLayout>

            <!-- Telefone -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Telefone" FontSize="14" TextColor="#333" />
                <Entry Placeholder="(11) 99999-9999" 
                       FontSize="16" 
                       BackgroundColor="White" 
                       TextColor="#333" 
                       Keyboard="Telephone"
                       HeightRequest="45" />
            </VerticalStackLayout>

            <!-- Contato de Emergência -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Contato de Emergência" FontSize="14" TextColor="#333" />
                <Entry Placeholder="(11) 99999-9999" 
                       FontSize="16" 
                       BackgroundColor="White" 
                       TextColor="#333" 
                       Keyboard="Telephone"
                       HeightRequest="45" />
            </VerticalStackLayout>

            <!-- Endereço -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Endereço" FontSize="14" TextColor="#333" />
                <Entry Placeholder="Rua, número, bairro, cidade" 
                       FontSize="16" 
                       BackgroundColor="White" 
                       TextColor="#333" 
                       HeightRequest="45" />
            </VerticalStackLayout>

            <!-- Senha -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Senha" FontSize="14" TextColor="#333" />
                <Entry Placeholder="Mínimo 8 caracteres" 
                       FontSize="16" 
                       BackgroundColor="White" 
                       TextColor="#333" 
                       IsPassword="True"
                       HeightRequest="45" />
            </VerticalStackLayout>

            <!-- Confirmar Senha -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Confirmar Senha" FontSize="14" TextColor="#333" />
                <Entry Placeholder="Digite a senha novamente" 
                       FontSize="16" 
                       BackgroundColor="White" 
                       TextColor="#333" 
                       IsPassword="True"
                       HeightRequest="45" />
            </VerticalStackLayout>

            <!-- Botão Criar Conta -->
            <Button Text="CRIAR CONTA" 
                    BackgroundColor="#FF0000" 
                    TextColor="White" 
                    CornerRadius="8" 
                    HeightRequest="50" 
                    FontSize="16"
                    FontAttributes="Bold"
                    Margin="0,20,0,10" />

            <!-- Botão Já tenho conta -->
            <Button Text="Já tenho uma conta" 
                    BackgroundColor="Transparent" 
                    TextColor="#FF0000" 
                    FontSize="14" 
                    BorderWidth="0"
                    HeightRequest="40" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>