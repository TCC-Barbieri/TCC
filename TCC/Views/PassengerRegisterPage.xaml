<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:behaviors="clr-namespace:TCC.Behaviors"
             x:Class="TCC.Views.PassengerRegisterPage"
             BackgroundColor="White"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Spacing="0">

            <!-- Cabeçalho - Full Width -->
            <Grid HeightRequest="120" Margin="0">
                <Image Source="fundovermelho.jpg" 
                       Aspect="AspectFill" />
                <!-- Overlay semitransparente opcional para melhorar legibilidade -->
                <BoxView BackgroundColor="#80000000" />
                <VerticalStackLayout HorizontalOptions="Center" 
                                   VerticalOptions="Center" 
                                   Spacing="5">
                    <Label Text="Criar Conta" 
                           FontSize="24" 
                           HorizontalOptions="Center" 
                           FontAttributes="Bold"
                           TextColor="White" />
                    <Label Text="Passageiro" 
                           FontSize="16" 
                           HorizontalOptions="Center" 
                           TextColor="White" />
                    <Label Text="Cadastre-se para utilizar o transporte Barbieri!" 
                           FontSize="12" 
                           HorizontalOptions="Center" 
                           TextColor="White" />
                </VerticalStackLayout>
            </Grid>

            <!-- Conteúdo do formulário com padding -->
            <VerticalStackLayout Padding="20" Spacing="20">

                <!-- Debug Button -->
                <Button Text="Mostrar Caminho do Banco de Dados"
                        BackgroundColor="#333333"
                        TextColor="White"
                        FontSize="12"
                        Clicked="Button_Clicked"
                        CornerRadius="10"
                        HeightRequest="40">

                </Button>


                <!-- Registration Fields -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Nome" />
                    <Entry x:Name="NameEntry" Placeholder="Nome completo" HeightRequest="45" />
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="RG" />
                    <Entry x:Name="RGEntry" Placeholder="00.000.000-0" HeightRequest="45" Keyboard="Numeric">
                        <Entry.Behaviors>
                            <toolkit:MaskedBehavior Mask="XX.XXX.XXX-X" />
                        </Entry.Behaviors>
                    </Entry>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="CPF" />
                    <Entry x:Name="CPFEntry" 
           Placeholder="000.000.000-00" 
           HeightRequest="45" 
           Keyboard="Numeric">
                        <Entry.Behaviors>
                            <toolkit:MaskedBehavior Mask="XXX.XXX.XXX-XX" />
                            <behaviors:CPFValidationBehavior x:Name="CPFValidation" ErrorLabel="{x:Reference CPFErrorLabel}" />
                        </Entry.Behaviors>
                    </Entry>
                    <!-- Label de erro para CPF -->
                    <Label x:Name="CPFErrorLabel" 
           FontSize="12" 
           TextColor="Red" 
           IsVisible="False" 
           Margin="0,2,0,0" />
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Email" />
                    <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" HeightRequest="45" />
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Data de Nascimento" />
                    <Border Stroke="#DDDDDD" StrokeThickness="1" StrokeShape="RoundRectangle 5,5,5,5">
                        <DatePicker x:Name="BirthDatePicker" Format="dd/MM/yyyy" />
                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Telefone" />
                    <Entry x:Name="PhoneEntry" Placeholder="(11) 99999-9999" HeightRequest="45" Keyboard="Telephone">
                        <Entry.Behaviors>
                            <toolkit:MaskedBehavior Mask="(XX) XXXXX-XXXX" />
                        </Entry.Behaviors>
                    </Entry>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Contato de emergência" />
                    <Border Stroke="#DDDDDD" StrokeThickness="1" StrokeShape="RoundRectangle 5,5,5,5">
                        <Entry x:Name="EmergencyPhoneEntry" Placeholder="Telefone de emergência" Keyboard="Telephone">
                            <Entry.Behaviors>
                                <toolkit:MaskedBehavior Mask="(XX) XXXXX-XXXX" />
                            </Entry.Behaviors>
                        </Entry>
                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Gênero" />
                    <Border Stroke="#DDDDDD" StrokeThickness="1" StrokeShape="RoundRectangle 5,5,5,5" HeightRequest="45">
                        <Picker x:Name="GenderPicker" >
                            <Picker.Items>
                                <x:String>Masculino</x:String>
                                <x:String>Feminino</x:String>
                                <x:String>Outro</x:String>
                                <x:String>Prefiro não dizer</x:String>
                            </Picker.Items>
                        </Picker>
                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Endereço" />
                    <Entry x:Name="AddressEntry" Placeholder="Endereço residencial" HeightRequest="45" />
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Senha" />
                    <Entry x:Name="PasswordEntry" Placeholder="Mínimo 6 caracteres" IsPassword="True" HeightRequest="45" />
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Confirmar Senha" />
                    <Entry x:Name="ConfirmPasswordEntry" Placeholder="Digite a senha novamente" IsPassword="True" HeightRequest="45" />
                </VerticalStackLayout>

                <!-- Additional Info -->
                <VerticalStackLayout Spacing="20">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Escola" />
                        <Border Stroke="#DDDDDD" StrokeThickness="1" StrokeShape="RoundRectangle 5,5,5,5" HeightRequest="45">
                            <Picker x:Name="SchoolPicker">
                                <Picker.Items>
                                    <x:String>ETEC</x:String>
                                    <x:String>UNESP</x:String>
                                    <x:String>UNISAGRADO</x:String>
                                </Picker.Items>
                            </Picker>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Special Treatment -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Atendimento especial?" />
                        <HorizontalStackLayout Spacing="20">
                            <RadioButton x:Name="AtendimentoSimRadio"
                                         Content="Sim"
                                         GroupName="SpecialTreatment"
                                         CheckedChanged="OnAtendimentoEspecialChanged"/>
                            <RadioButton x:Name="AtendimentoNaoRadio"
                                         Content="Não"
                                         GroupName="SpecialTreatment"
                                         IsChecked="True"
                                         CheckedChanged="OnAtendimentoEspecialChanged"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>

                    <VerticalStackLayout x:Name="SpecialTreatmentDetailsLayout" IsVisible="False" Spacing="5">
                        <Label Text="Detalhes do atendimento especial" />
                        <Border Stroke="#DDDDDD" StrokeThickness="1" StrokeShape="RoundRectangle 5,5,5,5">
                            <Editor x:Name="SpecialTreatmentEditor" Placeholder="Descreva alguma necessidade especial" HeightRequest="100" AutoSize="TextChanges" />
                        </Border>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Nome do responsável" />
                        <Border Stroke="#DDDDDD" StrokeThickness="1" StrokeShape="RoundRectangle 5,5,5,5">
                            <Entry x:Name="ResponsibleEntry" Placeholder="Nome completo do responsável" />
                        </Border>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Endereço alternativo" />
                        <Border Stroke="#DDDDDD" StrokeThickness="1" StrokeShape="RoundRectangle 5,5,5,5">
                            <Entry x:Name="BackupAddressEntry" Placeholder="Endereço alternativo" />
                        </Border>
                    </VerticalStackLayout>
                </VerticalStackLayout>

                <!-- Action Buttons -->
                <Button Text="REGISTRAR"
                        BackgroundColor="Red"
                        TextColor="White"
                        CornerRadius="25"
                        HeightRequest="50"
                        FontAttributes="Bold"
                        Clicked="OnRegisterClicked">
                   
                </Button>

                <Button Text="Já tenho uma conta"
                        BackgroundColor="Transparent"
                        TextColor="Red"
                        FontSize="14"
                        Clicked="OnAlreadyHaveAccount_Clicked">

                </Button>

            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>