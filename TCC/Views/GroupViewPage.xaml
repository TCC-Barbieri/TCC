<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TCC.Views.GroupViewPage"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="*,Auto" Padding="10">

        <!-- Ãrea rolÃ¡vel -->
        <ScrollView Grid.Row="0">
            <StackLayout Padding="20" Spacing="20">

                <Label Text="Grupos por Escola"
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="#2C3E50" />

                <!-- ETEC -->
                <Frame BackgroundColor="#E8F6F3" 
                       BorderColor="#16A085"
                       CornerRadius="10"
                       Padding="15">
                    <StackLayout>
                        <Label Text="ETEC" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               TextColor="#16A085"
                               HorizontalOptions="Center" />

                        <Label x:Name="EtecCountLabel"
                               Text="0 usuÃ¡rios"
                               FontSize="14"
                               TextColor="#7F8C8D"
                               HorizontalOptions="Center"
                               Margin="0,0,0,10" />

                        <CollectionView x:Name="EtecCollectionView"
                                        ItemsSource="{Binding EtecUsers}"
                                        BackgroundColor="Transparent"
                                        SelectionMode="Single"
                                        SelectionChanged="OnUserSelected">

                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="10,5"
                                          ColumnDefinitions="*,Auto">
                                        <StackLayout Grid.Column="0">
                                            <Label Text="{Binding Name}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="#2C3E50" />
                                            <Label Text="{Binding UserType}"
                                                   FontSize="12"
                                                   TextColor="#7F8C8D" />
                                            <Label Text="{Binding Email}"
                                                   FontSize="12"
                                                   TextColor="#7F8C8D" />
                                        </StackLayout>
                                        <Label Grid.Column="1"
                                               Text="ðŸ“š"
                                               FontSize="20"
                                               VerticalOptions="Center" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </Frame>

                <!-- Unisagrado -->
                <Frame BackgroundColor="#fde0e0"
                       BorderColor="Red"
                       CornerRadius="10"
                       Padding="15">
                    <StackLayout>
                        <Label Text="Unisagrado"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="Red"
                               HorizontalOptions="Center" />

                        <Label x:Name="UnisagradoCountLabel"
                               Text="0 usuÃ¡rios"
                               FontSize="14"
                               TextColor="#7F8C8D"
                               HorizontalOptions="Center"
                               Margin="0,0,0,10" />

                        <CollectionView x:Name="UnisagradoCollectionView"
                                        ItemsSource="{Binding UnisagradoUsers}"
                                        BackgroundColor="Transparent"
                                        SelectionMode="Single"
                                        SelectionChanged="OnUserSelected">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="10,5"
                                          ColumnDefinitions="*,Auto">
                                        <StackLayout Grid.Column="0">
                                            <Label Text="{Binding Name}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="#2C3E50" />
                                            <Label Text="{Binding UserType}"
                                                   FontSize="12"
                                                   TextColor="#7F8C8D" />
                                            <Label Text="{Binding Email}"
                                                   FontSize="12"
                                                   TextColor="#7F8C8D" />
                                        </StackLayout>
                                        <Label Grid.Column="1"
                                               Text="ðŸ›ï¸"
                                               FontSize="20"
                                               VerticalOptions="Center" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </Frame>

                <!-- Motoristas -->
                <Frame BackgroundColor="#F8F9FA"
                       BorderColor="#6C757D"
                       CornerRadius="10"
                       Padding="15">
                    <StackLayout>
                        <Label Text="Motoristas"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#6C757D"
                               HorizontalOptions="Center" />

                        <Label x:Name="DriversCountLabel"
                               Text="0 motoristas"
                               FontSize="14"
                               TextColor="#7F8C8D"
                               HorizontalOptions="Center"
                               Margin="0,0,0,10" />

                        <CollectionView x:Name="DriversCollectionView"
                                        ItemsSource="{Binding Drivers}"
                                        BackgroundColor="Transparent">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="10,5"
                                          ColumnDefinitions="*,Auto">
                                        <StackLayout Grid.Column="0">
                                            <Label Text="{Binding Name}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="#2C3E50" />
                                            <Label Text="{Binding UserType}"
                                                   FontSize="12"
                                                   TextColor="#7F8C8D" />
                                            <Label Text="{Binding Email}"
                                                   FontSize="12"
                                                   TextColor="#7F8C8D" />
                                            <Label Text="{Binding CNH}"
                                                   FontSize="12"
                                                   TextColor="#95A5A6" />
                                        </StackLayout>
                                        <Label Grid.Column="1"
                                               Text="ðŸš—"
                                               FontSize="20"
                                               VerticalOptions="Center" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </Frame>

            </StackLayout>
        </ScrollView>

        <!-- BOTÃƒO FIXO -->
        <Button Grid.Row="1"
                x:Name="BackButton"
                Text="Voltar"
                BackgroundColor="Red"
                TextColor="White"
                CornerRadius="25"
                FontAttributes="Bold"
                Margin="20,10"
                HeightRequest="55"
                Clicked="BackButton_Clicked" />

    </Grid>
</ContentPage>
