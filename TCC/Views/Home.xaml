<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TCC.Views.Home"
             Title="Home">


    <Grid>
        <!-- Imagem de fundo -->
        <Image Source="fundo_tcc.jpg"
               Aspect="AspectFill"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand" />

        <!-- Conteúdo principal -->
        <VerticalStackLayout Spacing="40"
                             Padding="0"
                             VerticalOptions="Center"
                             HorizontalOptions="Center">

            <!-- Texto de Boas-vindas -->
            <Label Text="Bem-vindo!"
                   FontSize="36"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   VerticalOptions="Center">

                <Label.Shadow>
                    <Shadow Brush="Black" Offset="2,2" Radius="5" Opacity="0.3"/>
                </Label.Shadow>
            </Label>

            <!-- Botões -->
            <VerticalStackLayout Spacing="20" WidthRequest="250">
                <Button x:Name="registerButton"
                        Text="Criar conta"
                        TextColor="#2C3E50"
                        FontAttributes="Bold"
                        BackgroundColor="White"
                        CornerRadius="25"
                        HeightRequest="55"
                        SemanticProperties.Hint="Criar nova conta"
                        Clicked="registerButton_Clicked">
                    <Button.Shadow>
                        <Shadow Brush="Black" Offset="0,4" Radius="8" Opacity="0.2"/>
                    </Button.Shadow>
                    <Button.GestureRecognizers>
                        <PointerGestureRecognizer PointerEntered="OnPointerEntered" PointerExited="OnPointerExited"/>
                    </Button.GestureRecognizers>
                </Button>

                <Button x:Name="loginButton"
                        Text="Login"
                        TextColor="White"
                        FontAttributes="Bold"
                        BackgroundColor="Transparent"
                        BorderColor="White"
                        BorderWidth="2"
                        CornerRadius="25"
                        HeightRequest="55"
                        SemanticProperties.Hint="Fazer login"
                        Clicked="loginButton_Clicked">
                    <Button.Shadow>
                        <Shadow Brush="Black" Offset="0,4" Radius="8" Opacity="0.2"/>
                    </Button.Shadow>
                    <Button.GestureRecognizers>
                        <PointerGestureRecognizer PointerEntered="OnPointer2Entered" PointerExited="OnPointer2Exited"/>
                    </Button.GestureRecognizers>
                </Button>
            </VerticalStackLayout>
        </VerticalStackLayout>


    </Grid>
</ContentPage>
