<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TCC.Views.PassengerRegisterPage"
             Title="Criar Conta"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Cabeçalho -->
            <Border BackgroundColor="#FF0000" 
                    Padding="20,30" 
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle,8">
                <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                    <Label Text="Criar Conta" 
                           FontSize="24" 
                           HorizontalOptions="Center" 
                           FontAttributes="Bold"
                           TextColor="White" />
                    <Label Text="Passageiro" 
                           FontSize="16" 
                           HorizontalOptions="Center" 
                           TextColor="White" />
                    <Label Text="Cadastre-se para utilizar o transporte Barbieri!" 
                           FontSize="12" 
                           HorizontalOptions="Center" 
                           TextColor="White" />
                </VerticalStackLayout>
            </Border>

            <!-- Nome -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Nome" FontSize="14" />
                <Entry Placeholder="Nome do usuário"
                       FontSize="16"
                       BackgroundColor="White"
                       TextColor="Black"
                       HeightRequest="45" />
            </VerticalStackLayout>

            <!-- Senha -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Senha" FontSize="14" />
                <Entry Placeholder="Senha"
                       IsPassword="True"
                       FontSize="16"
                       BackgroundColor="White"
                       TextColor="Black"
                       HeightRequest="45" />
            </VerticalStackLayout>

            <!-- Confirmar Senha -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Confirmar Senha" FontSize="14" />
                <Entry Placeholder="Confirmar Senha"
                       IsPassword="True"
                       FontSize="16"
                       BackgroundColor="White"
                       TextColor="Black"
                       HeightRequest="45" />
            </VerticalStackLayout>

            <!-- RG -->
            <VerticalStackLayout Spacing="5">
                <Label Text="RG" FontSize="14" />
                <Entry Placeholder="RG"
                       FontSize="16"
                       Keyboard="Numeric"
                       BackgroundColor="White"
                       TextColor="Black"
                       HeightRequest="45" />
            </VerticalStackLayout>

            <!-- CPF -->
            <VerticalStackLayout Spacing="5">
                <Label Text="CPF" FontSize="14" />
                <Entry Placeholder="CPF"
                       FontSize="16"
                       Keyboard="Numeric"
                       BackgroundColor="White"
                       TextColor="Black"
                       HeightRequest="45" />
            </VerticalStackLayout>

            <!-- Email -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Email" FontSize="14" />
                <Entry Placeholder="Email"
                       FontSize="16"
                       Keyboard="Email"
                       BackgroundColor="White"
                       TextColor="Black"
                       HeightRequest="45" />
            </VerticalStackLayout>

            <!-- Endereço -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Endereço" FontSize="14" />
                <Entry Placeholder="Endereço"
                       FontSize="16"
                       BackgroundColor="White"
                       TextColor="Black"
                       HeightRequest="45" />
            </VerticalStackLayout>

            <!-- Telefone -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Telefone" FontSize="14" />
                <Entry Placeholder="Telefone"
                       FontSize="16"
                       Keyboard="Telephone"
                       BackgroundColor="White"
                       TextColor="Black"
                       HeightRequest="45" />
            </VerticalStackLayout>

            <!-- Unidade Escolar -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Unidade Escolar" FontSize="14" />
                <Border Stroke="#DDDDDD"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 5,5,5,5"
                        HeightRequest="45">
                    <Picker
                            FontSize="12"
                            BackgroundColor="White"
                            TextColor="Black"
                            x:Name="UnidadeEscolarPicker">
                        <Picker.Items>
                            <x:String>ETEC</x:String>
                            <x:String>FATEC</x:String>
                            <x:String>UNESP</x:String>
                        </Picker.Items>
                    </Picker>
                </Border>
            </VerticalStackLayout>

            <!-- Botão Próximo -->
            <Button Text="PRÓXIMO"
                    BackgroundColor="#FF3333"
                    TextColor="White"
                    CornerRadius="8"
                    HeightRequest="50"
                    FontAttributes="Bold"
                    FontSize="16"
                    Margin="0,20,0,10" />

            <!-- Botão Já tenho uma conta -->
            <Button Text="Já tenho uma conta"
                    BackgroundColor="Transparent"
                    TextColor="#FF3333"
                    FontSize="14"
                    BorderWidth="0"
                    HeightRequest="40" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
