<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TCC.Views.LoginPage"
             Title="LoginPage"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout>

            <!-- Header occupying the entire top part -->
            <Grid HeightRequest="300">
                <Image Source="fundovermelho.jpg" 
           Aspect="AspectFill" />
                <!-- Overlay semitransparente opcional para melhorar legibilidade -->
                <BoxView BackgroundColor="#80000000" />
                <VerticalStackLayout HorizontalOptions="Center"
                         VerticalOptions="Center"
                         Spacing="8">
                    <Label Text="ðŸŽ‰ Seja Bem-Vindo! ðŸŽ‰" 
               FontSize="26" 
               HorizontalOptions="Center" 
               FontAttributes="Bold"
               TextColor="White" />
                    <Label Text="Conecte-se ao serviÃ§o de transporte Barbieri!" 
               FontSize="16" 
               HorizontalOptions="Center" 
               TextColor="White" />
                    <Label Text="Prepare-se para embarcar rumo aos seus sonhos ðŸš‹" 
               FontSize="16" 
               HorizontalOptions="Center" 
               FontAttributes="Bold"
               TextColor="White" />
                    <!-- Logo Container -->
                    <Frame BackgroundColor="White" 
               CornerRadius="60" 
               Padding="10" 
               HorizontalOptions="Center" 
               HeightRequest="120" 
               WidthRequest="120" 
               HasShadow="False">
                        <Image Source="logo.jpg" 
                    HeightRequest="100" 
                    WidthRequest="100" 
                    HorizontalOptions="Center" 
                    VerticalOptions="Center" />
                    </Frame>
                </VerticalStackLayout>
            </Grid>

            <ScrollView>
                <VerticalStackLayout Padding="20" 
                                     Spacing="15">

                    <Label Text="Login" 
                           FontSize="32" 
                           HorizontalOptions="Center" />

                    <Entry x:Name="EmailEntry" 
                           Placeholder="E-mail" 
                           Keyboard="Email" />
                    <Entry x:Name="PasswordEntry" 
                           Placeholder="Senha" 
                           IsPassword="True" />

                    <Picker x:Name="UserTypePicker" 
                            Title="Tipo de usuÃ¡rio">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Passageiro</x:String>
                                <x:String>Motorista</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>

                    <Button Text="Entrar"
                            BackgroundColor="Red"
                            TextColor="White"
                            Clicked="OnLoginClicked"/>

                </VerticalStackLayout>
            </ScrollView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>